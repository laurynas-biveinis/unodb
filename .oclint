disable-rules:
  - AvoidPrivateStaticMembers # GTest macros
  - EmptyIfStatement # GTest macros
  - DestructorOfVirtualClass # GTest macros
  - GotoStatement # GTest macros
  - HighNPathComplexity
  - NonCaseLabelInSwitchStatement # GTest macros
  - ShortVariableName
  - TooFewBranchesInSwitchStatement # GTest macros
  - UnusedLocalVariable
  - UselessParentheses # GTest macros
